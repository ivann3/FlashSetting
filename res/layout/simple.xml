            android:textSize="15sp" />

        <TextView
            android:text="123"
            android:id="@+id/filePath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
    </LinearLayout> -->

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll"
        android:layout_below="@+id/ll"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="4"
            android:background="#BABABA" />

        <TextView
            android:id="@+id/progress_tv1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.3"
            android:text="00"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3" >

        <TextView
            android:id="@+id/tv_spendTime"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_dataTime"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_fileSize"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/dataFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edt"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#28D4CA"
            android:cursorVisible="true"
            android:hint="100"
            android:inputType="number" />

        <Button
            android:id="@+id/number"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:onClick="onStart"
            android:text="设置次数" />

        <Button
            android:id="@+id/autoCopy"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:onClick="onStart"
            android:text="复制文件" />

        <Button
            android:id="@+id/clean"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:onClick="onStart"
            android:text="清除测试数据" />
    </LinearLayout>

</RelativeLayout>